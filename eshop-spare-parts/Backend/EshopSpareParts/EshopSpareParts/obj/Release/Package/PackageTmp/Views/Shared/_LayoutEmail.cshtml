<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>

<body style="margin:0px;">
    <header style=" width:100%; height:50px; background-color:beige;">
        <div style="max-width:600px; margin: auto;">
            <h2 style="margin-top:0px; padding-top:5px; text-align:center;">SM - @ViewBag.Title </h2>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()

        <footer style="background-color: beige;width: 100%;height: auto;display: block;position: absolute; bottom: 0;">
            <div style="max-width:600px; margin:auto; text-align:center; letter-spacing:2px;">

                <p>&copy; @DateTime.Now.Year - <b>School Management</b></p>
            </div>
        </footer>
    </div>

</body>
</html>
